{
	"version": "0.2.0",
	"compounds": [{
		"name": "Node+Browser",
		"configurations": ["Graphql"]
	}],
	"configurations": [

		{
			"type": "node",
			"request": "attach",
			"name": "PackageOne",
			"port": 5858,
			"protocol": "inspector",
			"address": "localhost",
			"restart": false,
			"sourceMaps": false,
			"localRoot": "${workspaceRoot}/packages/package-one",
			"remoteRoot": "/code/packages/package-one"
		},

		{
			"type": "node",
			"request": "attach",
			"name": "PackageTwo",
			"port": 5859,
			"protocol": "inspector",
			"address": "localhost",
			"restart": false,
			"sourceMaps": false,
			"localRoot": "${workspaceRoot}/packages/package-two",
			"remoteRoot": "/code/packages/package-two"
		},

		{
			"name": "Chrome",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceRoot}/packages/client/src",
			"userDataDir": "${workspaceRoot}/.vscode/chrome",
			"sourceMapPathOverrides": {
				"webpack://./src/*": "${webRoot}/*"
			}
		},

		{
			"type": "node",
			"request": "attach",
			"name": "Graphql",
			"port": 5860,
			"protocol": "inspector",
			"address": "localhost",
			"restart": true,
			"sourceMaps": true,
			"localRoot": "${workspaceRoot}/packages/graphql",
			"remoteRoot": "/code/packages/graphql"
		}
	]
}
